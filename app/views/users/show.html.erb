<div class="container mt-4">
  <h4>User Details</h4>
  <div class="card p-3" style="background-color: #f5f5dc;">
    <div class="main-body">
      <div class="row gutters-sm">
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body">
              <div class="d-flex flex-column align-items-center text-center">
                <img src="https://www.kindpng.com/picc/m/105-1055656_account-user-profile-avatar-avatar-user-profile-icon.png" alt="Account User Profile Avatar - Avatar User Profile Icon, HD Png" target="_blank" alt="User" class="rounded-circle" width="150">
                <div class="mt-3">
                  <h4><%= @user.name %></h4>
                  <p class="text-secondary mb-1">User Profile</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-8">
          <div class="card mb-3">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Full Name</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= @user.name %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Email</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= @user.email %>
                </div>
              </div>
              <!-- Other user details -->
            </div>
          </div>

          <div class="card mb-3">
            <div class="card-body">
              <h6>Stamps</h6>
              <div class="row">
                <% @user.get_first_n_stamps(5).each do |art_piece| %>
                  <div class="col-4 mb-3 position-relative">
                    <div class="position-relative" style="width: 100pt; height: 100pt; overflow: hidden;">
                      <%= image_tag art_piece.get_icon, class: "img-fluid stamp-icon", style: "max-width: 100%; height: auto; max-height: 100%;" %>
                      <%= image_tag "https://png.pngtree.com/png-clipart/20230804/original/pngtree-vector-certified-stamp-insurance-control-checked-vector-picture-image_9512783.png", class: "img-fluid stamp-overlay position-absolute", style: "width: 100%; height: auto; top: 50%; left: 50%; transform: translate(-50%, -50%);" %>
                    </div>
                    <p class="text-center"><%= art_piece.name %></p>
                  </div>
                <% end %>
              </div>
              <div style="margin-top: 10px;">
                <div class="text-center">
                  <%= link_to "See all stamps", stamps_path(@user), class: "btn btn-primary" %>
                </div>
              </div>
            </div>
          </div>

          <div class="card mb-3">
            <div class="card-body">
              <h6>Badges</h6>
              <div class="row">
                <% @user.get_first_n_badges(5).each do |badge| %>
                  <div class="col-4 mb-3 position-relative">
                    <div class="position-relative" style="width: 100pt; height: 100pt; overflow: hidden;">
                      <%= image_tag badge.get_icon, class: "img-fluid", style: "max-width: 100%; height: auto; max-height: 100%;" %>
                    </div>
                    <p class="text-center"><%= badge.name %></p>
                  </div>
                <% end %>
              </div>
              <div style="margin-top: 10px;">
                <div class="text-center">
                  <%= link_to "See all badges", badges_path(@user), class: "btn btn-primary" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
